<?xml version='1.0' encoding='utf-8'?>
<widget id="com.oceanos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Océanos</name>
    <icon src="www/img/icon.png" platform="android" width="57" height="57" density="mdpi" />
    <description>
        Océanos - An Android App for marine forecast.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Sonia García-Ruiz - An Apache Cordova application.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
